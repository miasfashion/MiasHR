@page "/organization/list"
@inject NavigationManager NavigationManager

<PageTitle>Employee List</PageTitle>
<MudTabs Outlined="true" Position="Position.Left" Rounded="true" Border="false"
         @bind-ActivePanelIndex="activeIndex" Class="mt-12 ml-12">
    <MudTabPanel OnClick="navPage" Text="Organization Chart" />
    <MudTabPanel OnClick="navPage" Text="Employee List" />
</MudTabs>
<MudTextField Class="justify-content-end" @bind-Value="Search" Label="Search" Variant="Variant.Outlined" Adornment="Adornment.End" OnAdornmentClick="doSomething" AdornmentIcon="@Icons.Material.Filled.Search" AdornmentColor="Color.Secondary" />
<MudPaper Class="d-flex justify-content-center" Elevation="0">
<MudText Inline="true" GutterBottom="true"><b>EMPLOYEE(S) LIST</b></MudText>
<MudTable Items="@employeesList"
          Class="d-flex w-50"
          Striped="@true" Dense="@dense" Hover="@hover">
    <HeaderContent>
        <MudTh>NAME</MudTh>
        <MudTh>ORG.</MudTh>
        <MudTh>ORG.TEL</MudTh>
        <MudTh>EXT.</MudTh>
        <MudTh>E-MAIL</MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="Name" Class="w-25">@context.Name</MudTd>
            <MudTd DataLabel="Org">@context.Org</MudTd>
            <MudTd DataLabel="OrgTel">@context.OrgTel</MudTd>
            <MudTd DataLabel="Ext">@context.Ext</MudTd>
            <MudTd DataLabel="Email">@context.Email</MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>
    @code {
    public string Search { get; set; }
    private bool dense = true;
    private bool hover = true;

    private void doSomething()
    {
    }

    //Navigation Tab
    int activeIndex = 1;

    private void navPage()
    {
        if (activeIndex == 0)
        {
            NavigationManager.NavigateTo("/organization/chart");
        }
        else if (activeIndex == 1)
        {
            NavigationManager.NavigateTo("/organization/list");
        }
    }

    //Employee List
    public class EmployeeList
    {
        public string? Name { get; set; }
        public string? Org { get; set; }
        public string? OrgTel { get; set; }
        public int Ext { get; set; }
        public string? Email { get; set; }
    }

