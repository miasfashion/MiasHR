@* @page "/insurance/surfing" *@
@inject NavigationManager NavigationManager

<PageTitle>Insurance Surfing</PageTitle>
<MudBreadcrumbs Items="_breadcrumbs" />
<MudContainer Class="d-block">
    <MudContainer Class="d-flex">
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudPaper Elevation=0 MinWidth="195px"> </MudPaper>
        </MudHidden>
        <MudText Class="ml-4" Typo="Typo.h4">Insurance Surfing</MudText>
    </MudContainer>
    <MudContainer Class="d-flex">
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudPaper Elevation="0">
                <MudTabs Outlined="true" Position="Position.Left" Rounded="true" Border="true"
                @bind-ActivePanelIndex="activeIndex" Style="position:sticky; top: 120px;" Class="ma-4">
                    <MudTabPanel OnClick="navPage" Text="Current Insurance" />
                    <MudTabPanel OnClick="navPage" Text="Insurance Surfing" />
                </MudTabs>
            </MudPaper>
        </MudHidden>
        <MudPaper Class="d-block" Elevation="0">
            <MudPaper Class="mt-4 ma-2 pa-2" Elevation="1">
                <MudPaper Class="d-flex gap-2 px-4 pt-4" Elevation="0">
                    <MudText Typo="Typo.subtitle2">Choose Insurance Coverage (* If you need other coverage, please contact HR directly.)</MudText>
                </MudPaper>
                <MudPaper Class="d-flex gap-2 px-4" Elevation="0">
                    <MudSelect T="string" Label="Medical" MultiSelection="true" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
                        <MudSelectItem Value="@("Employee")" />
                        <MudSelectItem Value="@("Spouse")" />
                        <MudSelectItem Value="@("Children")" />
                    </MudSelect>
                    <MudSelect T="string" Label="Dental" MultiSelection="true" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
                        <MudSelectItem Value="@("Employee")" />
                        <MudSelectItem Value="@("Spouse")" />
                        <MudSelectItem Value="@("Children")" />
                    </MudSelect>
                    <MudSelect T="string" Label="Vision" MultiSelection="true" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
                        <MudSelectItem Value="@("Employee")" />
                        <MudSelectItem Value="@("Spouse")" />
                        <MudSelectItem Value="@("Children")" />
                    </MudSelect>
                    <MudSelect T="string" Label="Life" MultiSelection="true" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
                        <MudSelectItem Value="@("Employee")" />
                    </MudSelect>
                </MudPaper>
                <MudContainer Class="d-flex justify-content-end">
                    <MudButton Class="m-3" OnClick="doSomething" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Search" Color="Color.Info" Size="Size.Large">Inquiry</MudButton>
                </MudContainer>
            </MudPaper>
            <MudAlert Class="m-2" Severity="Severity.Warning">This page is not an enrollment application form. You have to submit a hard copy of the health insurance enrollement application paper.</MudAlert>
            <MudAlert Class="m-2" Severity="Severity.Warning">You can download a plan summary information when you click each plan name.</MudAlert>
        </MudPaper>
    </MudContainer>
</MudContainer>

@code {
    // Breadcrumbs
    private List<BreadcrumbItem> _breadcrumbs = new List<BreadcrumbItem>()
    {
        new BreadcrumbItem("Home", href: "/home"),
        new BreadcrumbItem("Insurance Surfing",  href: null, disabled: true)
    };

    //Navigation Tab
    int activeIndex = 1;

    private void navPage()
    {
        if (activeIndex == 0)
        {
            NavigationManager.NavigateTo("/insurance/current");
        }
        else if (activeIndex == 1)
        {
            NavigationManager.NavigateTo("/insurance/surfing");
        }
    }

    @*TODO: When button is clicked, it will use the values stored from the select
            and search price info*@
    private void doSomething()
    {

    }

}
