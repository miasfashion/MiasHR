        <MudText Typo="Typo.h4"> @name </MudText>
        <MudText Typo="Typo.body2"> @role </MudText>
    </MudStack>
</MudPaper>

@code {
    [Parameter]
    public string name { get; set; } = "Jaehoon Choi";
    
    [Parameter]
    public string role { get; set; } = "Administrator";
}
